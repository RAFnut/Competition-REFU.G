{% extends 'AppBundle:user:base.html.twig' %}

{% block body %}

<div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">IN+</h1>

            </div>
            <h3>Register to IN+</h3>
            <p>Create account to see it in action.</p>
            <form class="m-t" role="form" action="{{ path('register') }}" method="post" {{ form_enctype(form) }}>
                <div class="form-group">
                    {{ form_widget(form.username, {"attr": {"class": "form-control", "placeholder": "Name"}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.password.first, {"attr": {"class": "form-control", "placeholder": "Password"}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.password.second, {"attr": {"class": "form-control", "placeholder": "Repeat Password"}}) }}
                </div>
                <div class="form-group">
                        <div class="checkbox i-checks"><label> <input type="checkbox" required><i></i> Agree the terms and policy </label></div>
                </div>
                {{ form_widget(form.submit, {"attr": {"class": "btn btn-primary block full-width m-b"}}) }}
                <p class="text-muted text-center"><small>Already have an account?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="{{ path('login') }}">Login</a>
                {{ form_rest(form) }}
            </form>
            <p class="m-t"> <small>Inspinia we app framework base on Bootstrap 3 &copy; 2014</small> </p>
        </div>
    </div>

        

	
{% endblock %}

